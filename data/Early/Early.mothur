###########################################################################
# Set pipelines/PM16S/data/Early directory
set.dir(output=pipelines/PM16S/data/Early/)
###########################################################################

###########################################################################
# Take forward and reverse sequences, complement reverse, make contigs
make.contigs(file=pipelines/PM16S/data/Early/Early.files, processors=8)
#summary.seqs(fasta=Early.trim.contigs.fasta, processors=8)
###########################################################################

###########################################################################
# Denoising
#
# Step 1: Remove sequences that are longer than 16S region
#         Remove sequences that have ambiguous bases
screen.seqs(fasta=current, group=pipelines/PM16S/data/Early/Early.contigs.groups, summary=current, maxambig=0, maxlength=275)
# Step 2: Remove duplicate sequences
unique.seqs(fasta=current)
# Step 3: For each sequence, count the number of groups in which it belongs
count.seqs(name=current, group=current)
#summary.seqs(count=current)
# Step 4: Align to Reference Database
#    a. Simplify reference pipelines/P-M16S/database to only use our region
#       TMC -- since this will differ for every run, I generalized it and left this out
#       Output is the same, I have verified it
#pcr.seqs(fasta=/biorg/pipelines/PM16S/data/Stability/silva.bacteria.fasta, start=11894, end=25319, keepdots=F, processors=8)
#pcr.seqs(fasta=/biorg/pipelines/PM16S/data/Stability/silva.bacteria.fasta, keepdots=F, processors=8)
#system(cp pipelines/PM16S/data/Early/silva.bacteria.pcr.fasta pipelines/P-M16S/data/Early/silva.v4.fasta)
#summary.seqs(fasta=silva.v4.fasta)
#    b. Align to simplified reference pipelines/PM16S/database
#align.seqs(fasta=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.fasta, reference=pipelines/P-M16S/data/Early/silva.v4.fasta)
align.seqs(fasta=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.fasta, reference=pipelines/PM16S/silva.bacteria.fasta)
summary.seqs(fasta=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.align, count=pipelines/PM16S/data/Early/Early.trim.contigs.good.count_table)
# Step 5: Remove sequences that do not align to the same region (TMC I believe this will differ between runs)a
screen.seqs(fasta=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.align, count=pipelines/PM16S/data/Early/Early.trim.contigs.good.count_table, summary=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.summary, start=13862, end=23444, maxhomop=8)
#summary.seqs(fasta=Early.trim.contigs.good.unique.good.align, count=Early.trim.contigs.good.good.count_table)
# Step 6: Remove extra terminal nucleotides and gaps
filter.seqs(fasta=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.align, vertical=T, trump=.)
# Step 7: Be sure sequences are still unique after the alignment
unique.seqs(fasta=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.filter.fasta, count=pipelines/PM16S/data/Early/Early.trim.contigs.good.good.count_table)
# Step 8: Count sequences with two or fewer differences as the same, remove one of them
pre.cluster(fasta=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.filter.unique.fasta, count=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.filter.count_table, diffs=2)
# Step 9: Remove known chimeric sequences
# NOTE: Depending on the release of vsearch this can be slightly different than the tutorial.  Should be a *minimal* (no more than a few sequences) difference
chimera.vsearch(fasta=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.filter.unique.precluster.fasta, count=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.filter.unique.precluster.count_table, dereplicate=t)
remove.seqs(fasta=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.filter.unique.precluster.fasta, accnos=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.filter.unique.precluster.denovo.vsearch.accnos)
# Step 10: Remove any sequences that are not bacteria
# TMC NOTE: The newer Mothur will automatically generate pipelines/PM16S/data/Early files in the same folder as the pipelines/PM16S/databases
# And it's not controllable through set.dir.  Thus -- you need the reference and taxonomy in your local folder now
classify.seqs(fasta=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.filter.unique.precluster.pick.fasta, count=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.filter.unique.precluster.denovo.vsearch.pick.count_table, reference=pipelines/PM16S/input/trainset9_032012.pds.fasta, taxonomy=pipelines/PM16S/input/trainset9_032012.pds.tax, cutoff=80)
remove.lineage(fasta=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.filter.unique.precluster.pick.fasta, count=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.filter.unique.precluster.denovo.vsearch.pick.count_table, taxonomy=pipelines/PM16S/data/Early/Early.trim.contigs.good.unique.good.filter.unique.precluster.pick.pds.wang.taxonomy, taxon=Chloroplast-Mitochondria-unknown-Archaea-Eukaryota)
#summary.tax(taxonomy=current, count=current)
